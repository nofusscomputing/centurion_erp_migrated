                    <label>{{ form.organization.label }}</label>
                    <span>{{ form.organization }}</span>
                </div>

            </div>


            <div style="display: inline; width: 40%; margin: 30px;">

                <div class="detail-view-field">
                    <label>{{ form.planned_start_date.label }}</label>
                    <span>{{ form.planned_start_date.value }}</span>
                </div>

                <div class="detail-view-field">
                    <label>{{ form.planned_finish_date.label }}</label>
                    <span>{{ form.planned_finish_date.value }}</span>
                </div>

                <div class="detail-view-field">
                    <label>{{ form.real_start_date.label }}</label>
                    <span>{{ form.real_start_date.value }}</span>
                </div>

                <div class="detail-view-field">
                    <label>{{ form.real_finish_date.label }}</label>
                    <span>{{ form.real_finish_date.value }}</span>
                </div>

            </div>

            <hr />


        </div>

        <hr />

        <div style="display: inline; width: 40%; margin: 30px;">
            <h3>Manager</h3>
            <div style="display: inline; width: 40%; margin: 30px;">

                <div class="detail-view-field">
                    <label>{{ form.manager_user.label }}</label>
                    <span>{{ form.manager_user.value }}</span>
                </div>

            </div>

             <div style="display: inline; width: 40%; margin: 30px;">

                <div class="detail-view-field">
                    <label>{{ form.team_members.label }}</label>
                    <span>{{ form.team_members.value }}</span>
